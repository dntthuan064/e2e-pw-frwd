{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "sourceMap": true,
    "types": ["node", "@playwright/test", "webdriverio", "@wdio/cucumber-framework"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "playwright.config.ts"],
  "exclude": ["node_modules"]
} 